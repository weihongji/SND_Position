@model IEnumerable<PeopleOverviewReportItem>

@{
	ViewBag.Title = "人员综合信息";
}

<style type="text/css">
	table.grid {
		border-collapse: collapse;
	}

		table.grid td, table.grid th {
			border: 1px solid #808080;
			padding: 3px;
		}
</style>

<h2>人员综合信息</h2>
<hr />
<table class="grid" style="margin-top: 20px;">
	<tr>
		<th>工号</th>
		<th>姓名</th>
		<th>部门</th>
		<th>工种</th>
		<th>职务</th>
		<th>矿灯号</th>
		<th>射频号</th>
		<th>发射器状态</th>
	</tr>

	@foreach (var item in Model) {
		<tr>
			<td>@Html.DisplayFor(modelItem => item.PeopleId)</td>
			<td>@Html.DisplayFor(modelItem => item.PeopleName)</td>
			<td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
			<td>@Html.DisplayFor(modelItem => item.WorkType)</td>
			<td>@Html.DisplayFor(modelItem => item.Rank)</td>
			<td>@Html.DisplayFor(modelItem => item.LampId)</td>
			<td>@Html.DisplayFor(modelItem => item.SenderId)</td>
			<td>@Html.DisplayFor(modelItem => item.SenderStatus)</td>
		</tr>
 }
</table>
